{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug",
			"type": "shell",
			"group": "build",
			"command": "make",
			"args": [
				"debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		},
		{
			"label": "Build Release",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "make",
			"args": [
				"all"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make clean cleandebug && rm -rf build"
		},
		{
			"label": "FClean",
			"type": "shell",
			"command": "make fclean fcleandebug && rm -rf build product"
		},
		{
			"label": "Norminette",
			"type": "shell",
			"command": "make",
			"args": [
				"norm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"owner": "Norminette",
				"fileLocation": [
					"autoDetect",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "^(.*):\\s+(.*)$",
						"file": 1
					},
					{
						"regexp": "^(Notice|Error):\\s+(\\S+)\\s+\\(line:\\s+(\\d+),\\s+col:\\s+(\\d+)\\):\\s+(.*)$",
						"loop": true,
						"severity": 1,
						"code": 2,
						"line": 3,
						"column": 4,
						"message": 5
					}
				]
			},
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		}
	]
}